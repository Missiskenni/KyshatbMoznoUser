<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#DFDFDF"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameItemRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:text="Название"/>

        <Button
            android:id="@+id/btnCartRemove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_remove"
            android:layout_toStartOf="@+id/cartQuan"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:id="@+id/cartQuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/btnCartAdd"
            android:text="1"/>
        <Button
            android:id="@+id/btnCartAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_add"
            android:layout_toStartOf="@+id/cartOnePrice"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:id="@+id/cartOnePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cartR"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:text="500"/>
        <TextView
            android:id="@+id/cartR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:text="р"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>