<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#DFDFDF"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/nameOrderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:text="Название"/>


        <TextView
            android:id="@+id/cartQuanOrderCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/cartQuanX"
            android:layout_marginEnd="5dp"
            android:text="2"/>

        <TextView
            android:id="@+id/cartQuanX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/cartPrice"
            android:layout_marginEnd="5dp"
            android:text="x"/>

        <TextView
            android:id="@+id/cartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cartRub"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:text="250"/>
        <TextView
            android:id="@+id/cartRub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:layout_toStartOf="@+id/cartOnePrice"
            android:layout_marginEnd="50dp"
            android:text="р"/>

        <TextView
            android:id="@+id/cartOnePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cartR"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:text="500"/>
        <TextView
            android:id="@+id/cartR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/newBlack"
            android:textSize="14sp"
            android:text="р"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>