<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvFood"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DFDFDF">

        <ImageView
            android:id="@+id/photoOfFood"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/rest_def" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoOfFood"
            android:orientation="vertical">

            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Цена"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="#FF6255"
                />

            <TextView
                android:id="@+id/foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit ="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:layout_marginLeft="30dp"
                android:text="Название"
                android:textSize="20dp"
                android:textColor="@color/newBlack"
                />

            <TextView
                android:id="@+id/foodWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Вес"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnInCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_buy_food"
                android:text="Добавить в корзину"
                android:textSize="16dp"
                android:layout_margin="7dp"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>